<?xml version="1.0" encoding="UTF-8"?>
<widget version="0.2">
	<title xml:lang="ko">XE 슬라이드 배너</title>
	<title xml:lang="en">XE Banner Silder</title>
	<title xml:lang="zh-CN">XE Banner Silder</title>
	<description xml:lang="ko">XE widget for images slider</description>
	<description xml:lang="en">XE widget for images slider</description>
	<description xml:lang="zh-CN">图片滚动小部件</description>
	<version>0.1</version>
	<date>2009-06-10</date>

	<author email_address="developers@xpressengine.com" link="http://www.xpressengine.com">
		<name xml:lang="ko">NHN</name>
		<name xml:lang="en">NHN</name>
		<name xml:lang="zh-CN">NHN</name>
	</author>

	<extra_vars>
        <var id="banner_width">
            <type >text</type>
			<name xml:lang="ko">이미지 너비</name>
			<name xml:lang="en">Image width</name>
			<name xml:lang="zh-CN">图片宽度</name>
            <description xml:lang="ko">이미지 너비를 입력하여주세요(기본 958px)</description>
            <description xml:lang="en">Input the width of the image (default 958px)</description>
            <description xml:lang="zh-CN">请输入图片宽度（默认为 958px）</description>
        </var>
		<var id="banner_height">
            <type >text</type>
			<name xml:lang="ko">이미지 높이</name>
			<name xml:lang="en">Image height</name>
			<name xml:lang="zh-CN">图片高度</name>
            <description xml:lang="ko">이미지 높이를 입력하여주세요(기본 396px)</description>
            <description xml:lang="en">Input the height of the image (default 396px)</description>
            <description xml:lang="zh-CN">请输入图片高度（默认为 396px）</description>
        </var>
        <var id="images">
            <type filter="jpg,jpeg,gif,png" allow_multiple="Y">filebox</type>
			<name xml:lang="en">Images</name>
            <description xml:lang="en">Supported image attributes are:"title","description","url"</description>
        </var>
	</extra_vars>
</widget>
